<h2>Edit your Profile</h2>

<% if (typeof(errorMessage) !== 'undefined' && errorMessage) { %>
  <p class="error-message">
    <%= errorMessage %>
  </p>
  <% } %>

    <form action="/signup" method="post">
      <div>
        <label for="name-input"> Name </label>
        <input type="text" name="username" id="username-input" placeholder="Enter your new user name" value="<%= typeof user != 'undefined' && user.name ? user.name : '' %>">
        <% if (typeof(error) != 'undefined' && error.name) { %>
          <label class="control-label"> <%= error.name %> </label>
          <% } %>
      </div>

      <div>
        <label for="email-input"> Email </label>
        <input type="email" name="email" id="email-input" placeholder="e.g., user@company.com" value="<%= typeof user != 'undefined' && user.email ? user.email : '' %>">
        <% if (typeof(error) != 'undefined' && error.email) { %>
          <label class="control-label"> <%= error.email %> </label>
          <% } %>
      </div>

      <div>
        <label for="password-input"> Password </label>
        <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
        <% if (typeof(error) != 'undefined' && error.password) { %>
          <label class="control-label"> <%= error.password %> </label>
          <% } %>
      </div>

      <button type="submit"> Save changes </button>
    </form>

